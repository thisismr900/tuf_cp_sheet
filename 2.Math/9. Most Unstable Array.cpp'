#define MOD 1000000007
#define ll long long
#define pb push_back
#define mp make_pair
#define ff first
#define ss second

#include<bits/stdc++.h>
using namespace std;
/****************************************************************/

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    ll testcases;
    cin>>testcases;
    while(testcases--){
        ll n,m;
        cin>>n>>m;

        if(n==1)
          cout<<0;
        else if(n==2)
          cout<<m;
        else
          cout<<2*m;
        
        cout<<"\n";
        
    }
    return 0;
}


